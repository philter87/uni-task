{
  "_comment": "Examples for listing issues using GitHub REST API",
  "list_repository_issues": {
    "description": "List all issues in a repository",
    "endpoint": "GET /repos/{owner}/{repo}/issues",
    "example_request": {
      "method": "GET",
      "url": "https://api.github.com/repos/octocat/Hello-World/issues",
      "headers": {
        "Accept": "application/vnd.github+json",
        "Authorization": "Bearer YOUR_TOKEN",
        "X-GitHub-Api-Version": "2022-11-28"
      },
      "query_parameters": {
        "state": "open",
        "labels": "bug,urgent",
        "sort": "created",
        "direction": "desc",
        "per_page": 30,
        "page": 1
      }
    },
    "curl_example": "curl -L -H \"Accept: application/vnd.github+json\" -H \"Authorization: Bearer YOUR_TOKEN\" -H \"X-GitHub-Api-Version: 2022-11-28\" \"https://api.github.com/repos/OWNER/REPO/issues?state=open&labels=bug\"",
    "parameters": {
      "milestone": {
        "description": "Filter by milestone number or 'none' or '*'",
        "type": "string or integer",
        "examples": ["1", "none", "*"]
      },
      "state": {
        "description": "State of issues to return",
        "type": "string",
        "options": ["open", "closed", "all"],
        "default": "open"
      },
      "assignee": {
        "description": "Filter by assignee username, 'none', or '*'",
        "type": "string",
        "examples": ["octocat", "none", "*"]
      },
      "creator": {
        "description": "Filter by issue creator username",
        "type": "string"
      },
      "mentioned": {
        "description": "Filter by username mentioned in issue",
        "type": "string"
      },
      "labels": {
        "description": "Comma-separated list of label names",
        "type": "string",
        "example": "bug,ui,@high"
      },
      "sort": {
        "description": "What to sort results by",
        "type": "string",
        "options": ["created", "updated", "comments"],
        "default": "created"
      },
      "direction": {
        "description": "Sort direction",
        "type": "string",
        "options": ["asc", "desc"],
        "default": "desc"
      },
      "since": {
        "description": "Only issues updated after this time",
        "type": "string",
        "format": "ISO 8601 timestamp",
        "example": "2026-01-01T00:00:00Z"
      },
      "per_page": {
        "description": "Results per page",
        "type": "integer",
        "max": 100,
        "default": 30
      },
      "page": {
        "description": "Page number",
        "type": "integer",
        "default": 1
      }
    },
    "example_response": [
      {
        "id": 1,
        "node_id": "MDU6SXNzdWUx",
        "url": "https://api.github.com/repos/octocat/Hello-World/issues/1347",
        "repository_url": "https://api.github.com/repos/octocat/Hello-World",
        "number": 1347,
        "state": "open",
        "title": "Found a bug",
        "body": "I'm having a problem with this.",
        "user": {
          "login": "octocat",
          "id": 1
        },
        "labels": [
          {
            "id": 208045946,
            "name": "bug",
            "color": "f29513",
            "default": true
          }
        ],
        "assignee": {
          "login": "octocat",
          "id": 1
        },
        "assignees": [
          {
            "login": "octocat",
            "id": 1
          }
        ],
        "milestone": {
          "number": 1,
          "state": "open",
          "title": "v1.0"
        },
        "comments": 0,
        "created_at": "2011-04-22T13:33:48Z",
        "updated_at": "2011-04-22T13:33:48Z",
        "closed_at": null,
        "author_association": "COLLABORATOR",
        "state_reason": null
      }
    ]
  },
  "list_assigned_issues": {
    "description": "List issues assigned to authenticated user across all repos",
    "endpoint": "GET /issues",
    "example_request": {
      "method": "GET",
      "url": "https://api.github.com/issues",
      "headers": {
        "Accept": "application/vnd.github+json",
        "Authorization": "Bearer YOUR_TOKEN",
        "X-GitHub-Api-Version": "2022-11-28"
      },
      "query_parameters": {
        "filter": "assigned",
        "state": "open",
        "sort": "created",
        "direction": "desc"
      }
    },
    "curl_example": "curl -L -H \"Accept: application/vnd.github+json\" -H \"Authorization: Bearer YOUR_TOKEN\" -H \"X-GitHub-Api-Version: 2022-11-28\" https://api.github.com/issues",
    "filter_options": {
      "assigned": "Issues assigned to you",
      "created": "Issues created by you",
      "mentioned": "Issues mentioning you",
      "subscribed": "Issues you're subscribed to",
      "repos": "All issues you can see in repos you own",
      "all": "All issues you can see"
    }
  },
  "list_org_issues": {
    "description": "List issues in an organization assigned to authenticated user",
    "endpoint": "GET /orgs/{org}/issues",
    "example_request": {
      "method": "GET",
      "url": "https://api.github.com/orgs/my-org/issues",
      "headers": {
        "Accept": "application/vnd.github+json",
        "Authorization": "Bearer YOUR_TOKEN",
        "X-GitHub-Api-Version": "2022-11-28"
      }
    },
    "curl_example": "curl -L -H \"Accept: application/vnd.github+json\" -H \"Authorization: Bearer YOUR_TOKEN\" -H \"X-GitHub-Api-Version: 2022-11-28\" https://api.github.com/orgs/ORG/issues"
  },
  "pagination": {
    "description": "How to handle paginated responses",
    "link_header": "Link: <https://api.github.com/repos/owner/repo/issues?page=2>; rel=\"next\", <https://api.github.com/repos/owner/repo/issues?page=10>; rel=\"last\"",
    "example_python": "import requests\n\nurl = 'https://api.github.com/repos/owner/repo/issues'\nheaders = {'Authorization': 'Bearer TOKEN'}\n\nwhile url:\n    response = requests.get(url, headers=headers)\n    issues = response.json()\n    # Process issues\n    \n    # Get next page URL\n    url = response.links.get('next', {}).get('url')",
    "response_headers": {
      "Link": "Contains pagination URLs",
      "X-RateLimit-Remaining": "Number of requests remaining"
    }
  },
  "filtering_examples": {
    "open_bugs_with_high_priority": {
      "url": "https://api.github.com/repos/owner/repo/issues?state=open&labels=bug,high-priority"
    },
    "closed_in_last_week": {
      "url": "https://api.github.com/repos/owner/repo/issues?state=closed&since=2026-02-14T00:00:00Z"
    },
    "unassigned_open_issues": {
      "url": "https://api.github.com/repos/owner/repo/issues?state=open&assignee=none"
    },
    "issues_in_milestone": {
      "url": "https://api.github.com/repos/owner/repo/issues?milestone=5&state=all"
    },
    "most_commented": {
      "url": "https://api.github.com/repos/owner/repo/issues?sort=comments&direction=desc"
    }
  },
  "important_notes": {
    "pull_requests_included": "The API returns both issues and pull requests. Check for 'pull_request' key to identify PRs.",
    "rate_limits": "Authenticated requests: 5000/hour. Use pagination efficiently.",
    "permissions": "Requires 'Issues' repository permissions (read) for fine-grained tokens.",
    "default_behavior": "Without parameters, returns open issues sorted by creation date (newest first)."
  }
}
