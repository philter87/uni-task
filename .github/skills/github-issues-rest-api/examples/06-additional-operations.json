  "code_examples": {
    "complete_workflow_python": "import requests\n\n# Configuration\nTOKEN = 'your_token_here'\nREPO = 'owner/repo'\nBASE_URL = 'https://api.github.com'\nHEADERS = {\n    'Accept': 'application/vnd.github+json',\n    'Authorization': f'Bearer {TOKEN}',\n    'X-GitHub-Api-Version': '2022-11-28'\n}\n\n# Create an issue\nissue_data = {\n    'title': 'Bug: Login button not working',\n    'body': 'Steps to reproduce:\\n1. Go to login page\\n2. Click login\\n3. Nothing happens',\n    'labels': ['bug', 'high-priority']\n}\nresponse = requests.post(\n    f'{BASE_URL}/repos/{REPO}/issues',\n    headers=HEADERS,\n    json=issue_data\n)\nissue = response.json()\nprint(f\"Created issue #{issue['number']}\")\n\n# Add a comment\ncomment_data = {'body': 'I can reproduce this issue'}\nrequests.post(\n    issue['comments_url'],\n    headers=HEADERS,\n    json=comment_data\n)\n\n# Update the issue - add assignee\nupdate_data = {'assignees': ['developer1']}\nrequests.patch(\n    issue['url'],\n    headers=HEADERS,\n    json=update_data\n)\n\n# Close the issue when fixed\nclose_data = {\n    'state': 'closed',\n    'state_reason': 'completed'\n}\nrequests.patch(\n    issue['url'],\n    headers=HEADERS,\n    json=close_data\n)\nprint(f\"Closed issue #{issue['number']}\")",
    "complete_workflow_javascript": "const TOKEN = 'your_token_here';\nconst REPO = 'owner/repo';\nconst BASE_URL = 'https://api.github.com';\nconst HEADERS = {\n  'Accept': 'application/vnd.github+json',\n  'Authorization': `Bearer ${TOKEN}`,\n  'X-GitHub-Api-Version': '2022-11-28'\n};\n\nasync function manageIssue() {\n  // Create issue\n  const createRes = await fetch(`${BASE_URL}/repos/${REPO}/issues`, {\n    method: 'POST',\n    headers: HEADERS,\n    body: JSON.stringify({\n      title: 'Bug: Login button not working',\n      body: 'Steps to reproduce...',\n      labels: ['bug']\n    })\n  });\n  const issue = await createRes.json();\n  console.log(`Created issue #${issue.number}`);\n\n  // Add comment\n  await fetch(issue.comments_url, {\n    method: 'POST',\n    headers: HEADERS,\n    body: JSON.stringify({ body: 'Working on this' })\n  });\n\n  // Close issue\n  await fetch(issue.url, {\n    method: 'PATCH',\n    headers: HEADERS,\n    body: JSON.stringify({\n      state: 'closed',\n      state_reason: 'completed'\n    })\n  });\n  console.log(`Closed issue #${issue.number}`);\n}"
  },
